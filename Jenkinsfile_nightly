#!groovy

properties([
    [
        $class       : 'GithubProjectProperty',
        displayName  : 'Approve Organisations app',
        projectUrlStr: 'https://github.com/hmcts/rpx-xui-approve-org'
    ],
    pipelineTriggers([
    cron('H 05 * * *')
    ])
])

@Library("Infrastructure")

def type      = "nodejs"
def product   = "xui"
def component = "ao"
def channel   = '#xui-pipeline'

withNightlyPipeline(type, product, component) {
    enableSlackNotifications(channel)
    enableSecurityScan()
    enableFullFunctionalTest(30)

    env.TEST_URL = 'https://administer-orgs.aat.platform.hmcts.net'
    after('checkout') {sh 'yarn cache clean'}
    after('build') {
        sh 'npm run build'
        publishHTML([
            allowMissing         : true,
            alwaysLinkToLastBuild: true,
            keepAll              : true,
            reportDir            : "test/reports/lint/node/",
            reportFiles          : 'index.html',
            reportName           : 'node lint Report'
        ])
        publishHTML([
            allowMissing         : true,
            alwaysLinkToLastBuild: true,
            keepAll              : true,
            reportDir            : "test/reports/lint/ng/",
            reportFiles          : 'index.html',
            reportName           : 'ng lint Report'
        ])
    }

    after('fullFunctionalTest') {
        publishHTML([
            allowMissing         : true,
            alwaysLinkToLastBuild: true,
            keepAll              : true,
            reportDir            : "reports/tests/fullfunctional/",
            reportFiles          : 'index.html',
            reportName           : 'XUI Manage Organisation Full functional Tests'
        ])
    }
}
